{% if not request.user.is_authenticated %}
    <li class="nav-item">
        <a
                class="nav-link"
                aria-current="page"
                href="/login.html">
            Login
        </a>
    </li>
{% else %}
    <li class="nav-item dropdown">
        <a
                class="nav-link dropdown-toggle"
                href="#" role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false">
            {{ request.user.email }}
        </a>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item"
                   href="/app/logout">
                    Settings
                </a>
            </li>
            <li>
            <span class="dropdown-item"
                  hx-trigger="click"
                  hx-post="/app/logout">
                Logout
            </span>
            </li>
        </ul>
    </li>
{% endif %}